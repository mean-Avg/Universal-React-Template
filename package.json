  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.3",
    "mongoose": "^5.1.3"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "babel-loader": "^7.1.4",
    "babel-preset-react": "^6.24.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.8.2",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.10",
    "nodemon": "^1.17.5",
