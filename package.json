{
  "name": "universal-react-template",
  "version": "1.0.0",
  "description": "universal react template with redux store, HMR and server side render on webpack 4",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack --mode development --config webpack.config.js --watch",
    "prettier": "prettier --write client/**/*.js client/**/*.jsx server/**/*.js",
    "lint": "eslint client/** server/**",
    "start": "npm-run-all -p webpack server",
    "server": "nodemon server/server.js",
    "prettier-watch": "onchange 'client/**/*.js client/**/*.jsx server/*' -- prettier --write {{changed}}"
  },
  "repository": {
    "type": "git",
